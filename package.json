{
  "name": "pdf-linter",
  "version": "0.0.1",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "compile-textlint": "textlint-script-compiler --metadataName dev --metadataNamespace \"https://example.com\" --metadataHomepage \"https://example.com\" --mode development --output-dir public",
    "lint": "eslint --fix .",
    "lintcheck": "eslint .",
    "fmt": "prettier --no-semi --write \"**/*.{js,ts,tsx}\"",
    "fmtcheck": "prettier --no-semi --check \"**/*.{js,ts,tsx}\"",
    "predev": "npm run compile-textlint",
    "dev": "vite",
    "prebuild": "npm run compile-textlint",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@axe-core/react": "^4.4.3",
    "emotion": "^10.0.9",
    "pdfjs-dist": "~2.12.313",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.7.4"
  },
  "devDependencies": {
    "@textlint/script-compiler": "^0.12.1",
    "@types/pdfjs-dist": "^2.1.4",
    "@types/react": "^17.0.48",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "prettier": "^2.0.5",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "textlint-rule-preset-japanese": "^7.0.0",
    "typescript": "^4.9.5",
    "vite": "^3.0.5"
  }
}
