{
  "name": "pdf-linter",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "compile-textlint": "textlint-script-compiler --metadataName dev --metadataNamespace \"https://example.com\" --metadataHomepage \"https://example.com\" --mode development --output-dir public",
    "lint": "biome check --fix --unsafe .",
    "lintcheck": "biome lint .",
    "fmt": "biome format --write .",
    "fmtcheck": "biome format .",
    "predev": "node --run compile-textlint",
    "dev": "vite",
    "prebuild": "node --run compile-textlint",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "pretest-ct": "node --run compile-textlint",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@axe-core/react": "^4.4.3",
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "jotai": "^2.13.1",
    "pdfjs-dist": "~5.2.133",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@playwright/experimental-ct-react": "^1.54.2",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@textlint/script-compiler": "^0.17.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "rolldown-vite": "^6.3.21",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-japanese": "^10.0.4",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  }
}
