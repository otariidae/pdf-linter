{
  "name": "pdf-linter",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "compile-textlint": "textlint-script-compiler --metadataName dev --metadataNamespace \"https://example.com\" --metadataHomepage \"https://example.com\" --mode development --output-dir public",
    "lint": "biome check --fix --unsafe .",
    "lintcheck": "biome lint .",
    "fmt": "biome format --write .",
    "fmtcheck": "biome format .",
    "typecheck": "tsc",
    "predev": "node --run compile-textlint",
    "dev": "vite",
    "prebuild": "node --run compile-textlint",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "pretest:browser": "node --run compile-textlint",
    "test:browser": "vitest --config=vitest.browser.config.ts"
  },
  "dependencies": {
    "@axe-core/react": "^4.4.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.1.6",
    "jotai": "^2.13.1",
    "pdfjs-dist": "~5.2.133",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@textlint/script-compiler": "^0.17.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.14",
    "rolldown-vite": "^7.3.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-japanese": "^10.0.4",
    "typescript": "^5.9.3",
    "vitest-browser-react": "^2.0.2"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  }
}
